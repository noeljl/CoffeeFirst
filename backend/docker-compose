version: '3.8'

services:
  backend:
    build: ./backend
    ports:
      - '4000:4000'
    volumes:
      - ./backend:/app
    environment:
      - NODE_ENV=development
    networks:
      - my-network

  frontend:
    build:
      context: ./src
      dockerfile: Dockerfile
    ports:
      - '3000:3000'
    volumes:
      - ./src:/app
    environment:
      - NODE_ENV=development
    networks:
      - my-network

networks:
  my-network: